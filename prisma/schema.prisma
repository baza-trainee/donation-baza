generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma"
  output   = "./zod-schemas"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  password     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Application {
  id           String   @id @default(cuid())
  name         String
  email        String
  message      String
  createdAt    DateTime @default(now())
}

model Document {
  id           String   @id @default(cuid())
  key          String
  url          String
  publicId     String
}

model Contact {
  id           String   @id @default(cuid())
  phone1       String
  phone2       String
  email        String
  linkedin     String
  facebook     String
  telegram     String
}

model Event {
  id           String   @id @default(cuid())
  imageUrl     String
  imageId      String
  title        String
  text         String
  createdAt    DateTime @default(now())
}
